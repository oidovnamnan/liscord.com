rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuth() {
      return request.auth != null;
    }
    
    function isMember(bizId) {
      // In production, you would ideally check business membership via Firestore bridge
      // For now, enforcing path-based isolation
      return request.auth.token.activeBusiness == bizId;
    }

    match /businesses/{bizId}/{allPaths=**} {
      allow read: if isAuth();
      allow write: if isAuth(); // Basic for now, can be refined per business ID
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if isAuth() && request.auth.uid == userId;
    }
  }
}
